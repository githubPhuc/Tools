﻿
@{
    var data = ViewBag.data as ToolsApp.EntityFramework.User;
}
<div class="card mb-3">
    <div class="card-body contact">
        <div class="row">
            <div class="col-sm-10">
                <h4 class="mb-4 ">Thông tin liên hệ</h4>
            </div>
            <div class="col-sm-2">
                <button type="button" onclick="EditInfo('contact')" class="btn-shadow btn btn-info">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa-solid fa-pen" style="color: #fefbfb;"></i>
                    </span>
                    Cập nhật
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-sm-4">
                        <h6 class="mb-0"><i class="fa-solid fa-phone" style="color: #23b110;"></i>  &nbsp; Số điện thoại </h6>

                    </div>
                    <div class="col-md-8 col-sm-12 edit">
                        <input value=" @data.soDienThoai" oninput="this.value = this.value.replace(/[^0-123456789]/g, '');" class="form-control" type="text" id="soDienThoai" name="soDienThoai">
                    </div>
                    <div class="col-sm-8 text-secondary show">
                        @data.soDienThoai
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-4">
                        <h6 class="mb-0"> <i class="fa-solid fa-phone-volume" style="color: #23b110;"></i>&nbsp; Số điện thoại khác ( Nếu có) </h6>
                    </div>
                    <div class="col-md-8 col-sm-12 edit">
                        <input value="@data.soDienThoaiKhac" oninput="this.value = this.value.replace(/[^0-123456789]/g, '');" class="form-control " type="text" id="soDienThoaiKhac" name="soDienThoaiKhac">
                    </div>
                    <div class="col-sm-8 text-secondary show">
                        @data.soDienThoaiKhac
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-4">
                        <h6 class="mb-0"> <i class="fa-regular fa-envelope" style="color: #cf290c;"></i>&nbsp; Email </h6>
                    </div>
                    <div class="col-md-8 col-sm-12 edit">
                        <input value="@data.email" class="form-control " type="text" id="Email" name="Email">
                    </div>
                    <div class="col-sm-8 text-secondary show">
                        @data.email
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-4">
                        <h6 class="mb-0"> <img src="~/Content/images/zalo.png" alt="zalo" style="width:18px; height:15px" /> &nbsp; Zalo </h6>
                    </div>
                    <div class="col-md-8 col-sm-12 edit">
                        <input value="@data.zalo" oninput="this.value = this.value.replace(/[^0-123456789]/g, '');" class="form-control " type="text" id="zalo" name="zalo">
                    </div>
                    <div class="col-sm-8 text-secondary show">
                       @data.zalo
                    </div>
                </div>
                <hr>
                <div class="button-group">
                    <button type="button" onclick="SaveInfoContact()" class="btn-shadow btn-save btn btn-info btn-success ">
                        <span class="btn-icon-wrapper pr-2 opacity-7">
                            <i class="fa fa-save"></i>
                        </span>
                        Lưu
                    </button>
                    <button type="button" onclick="Cancel('contact')" style="margin-left:20px" class="btn-shadow btn-cancel btn btn-info btn-danger">
                        <span class="btn-icon-wrapper pr-2 opacity-7">

                            <i class="fa fa-close"></i>
                        </span>
                        Hủy
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>