
@{
    ViewBag.Title = "Edit";
    var data = ViewBag.data as ToolsApp.EntityFramework.ChinhSach;
}
<input id="id" name="id" value="@data.id" style="display:none" />
<div class="row" style="margin-bottom:5px">
    <div class="col-md-12 col-sm-4">
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Tiêu đề</label>
            <div class="col-md-12 col-sm-12 ten">
                <input value="@data.tieuDe" class="form-control" type="text" id="tieuDe" name="tieuDe" />
            </div>
        </div>
        <div class="row" style="margin-bottom:5px">
            <label class="col-md-12 col-sm-12">Nội dung</label>
            <div class="col-md-12 col-sm-12 ten">
                <textarea id="noiDung">@data.noiDung</textarea>
            </div>
        </div>

    </div>
</div>
<!--Ckeditor-->
<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: 'textarea#noiDung'
    });

</script>